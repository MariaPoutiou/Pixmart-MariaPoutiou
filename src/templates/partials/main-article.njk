<div class="article-section article__upper">
  <p class="article__paragraph">{{ articleIntro }}</p>
  {% for section in articleSections %}
    {% if section.title %}
      <h3 class="article__subtitle">{{ section.title }}</h3>
    {% endif %}
    {% if section.text %}
      <p class="article__paragraph">{{ section.text }}</p>
    {% endif %}
    {% if section.image %}
      <div class="article__img-wrapper">
        <picture class="article__img">
          <source srcset="/img/{{ section.image.src }}-1x.avif 1x, /img/{{ section.image.src }}-2x.avif 2x" type="image/avif"/>
          <source srcset="/img/{{ section.image.src }}-1x.webp 1x, /img/{{ section.image.src }}-2x.webp 2x" type="image/webp"/>
          <img class="article__img" src="/img/{{ blogHero.image.src }}-2x.webp" alt="{{ section.image.alt }}" loading="lazy"/>
        </picture>
        <div class="article__img-captions">
          <p class="article__img-description">{{ section.image.caption }}</p>
          <a class="article__img-link" href="{{ section.image.link }}">{{ section.image.linkText }}</a>
        </div>
      </div>
    {% endif %}
  {% endfor %}
</div>
<div class="article-section article__lower">
  <figure class="article__quote-wrapper">
    <img class="article__quote-img" src="{{ articleQuote.img }}" alt="Quote background">
      <blockquote class="article__quote">
        <svg class="svg article__quote-svg">
          <use href="{{ articleQuote.svg }}" aria-label="{{ articleQuote.svgAlt }}" loading="lazy"></use>
        </svg>
        {{ articleQuote.text }}
      </blockquote>
    </figure>
    <p class="article__paragraph">{{ articleOutro }}</p>
  </div>