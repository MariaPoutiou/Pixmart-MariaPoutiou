<section class="container related-articles">
  <div class="related-articles__header">
    <h2 class="related-articles__title">{{ relatedArticles.title }}</h2>
    <a class="related-articles__link" href="{{ relatedArticles.link.href }}">
      {{ relatedArticles.link.text }}
      <svg class="related-articles__icon">
        <use href="{{ relatedArticles.link.icon }}" aria-label="{{ relatedArticles.link.alt }}" loading="lazy"></use>
      </svg>
    </a>
  </div>
  <ul class="related-articles__list">
    {% for item in relatedArticles.articles %}
      {% include "partials/article-footer-card.njk" %}
    {% endfor %}
  </ul>
</section>