<div class="catalog-tools">
  <div class="button catalog-tools__dropdown button--tertiary">
    <select class="catalog-tools__select">
      {% for option in catalogDropdownOptions %}
        <option value="{{ option }}">{{ option }}</option>
      {% endfor %}
    </select>
  </div>
  <button class="button catalog-tools__filter button--primary">
    <svg class="svg catalog-tools__filter-icon">
      <use href="{{ catalogFilterButton.icon }}" aria-label="{{ catalogFilterButton.alt }}" loading="lazy"></use>
    </svg>
  </button>
</div>
<div>
  <p class="catalog-meta__info">{{ catalogMeta.info }}</p>
  <div class="catalog-meta">
    <div class="button catalog-meta__primary button--primary">
      <svg class="svg catalog-meta__icon">
        <use href="{{ catalogViewmodes.gridView.icon }}" aria-label="{{ catalogViewmodes.gridView.alt }}" loading="lazy"></use>
      </svg>
    </div>
    <div class="button catalog-meta__secondary button--tertiary">
      <svg class="svg catalog-meta__icon">
        <use href="{{ catalogViewmodes.listView.icon }}" aria-label="{{ catalogViewmodes.listView.alt }}" loading="lazy"></use>
      </svg>
    </div>
  </div>
</div>
<div class="catalog-tags">
  {% for tag in catalogTags %}
    <div class="catalog-tags__item">
      <p class="catalog-tags__label">{{ tag.label }}</p>
      <svg class="svg catalog-tags__icon">
        <use href="{{ tag.icon }}" aria-label="{{ tag.alt }}" loading="lazy"></use>
      </svg>
    </div>
  {% endfor %}
</div>