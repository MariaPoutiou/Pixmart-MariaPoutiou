<section class="catalog-header">
  <div class="catalog-tools">
    <div class="catalog-tools__upper">
      <div class="catalog-tools__select-wrapper">
        {% include "partials/dropdown-catalog.njk" %}
      </div>
      <button class="button catalog-tools__filter button--primary-small">
        <svg class="svg catalog-tools__filter-icon" aria-label="{{ catalogFilterButton.alt }}">
          <use href="{{ catalogFilterButton.icon }}"></use>
        </svg>
      </button>
    </div>
    <div class="catalog-tools__lower">
      <p class="catalog-tools__info">{{ catalogMeta.info }}</p>
      <div class="catalog-meta__wrapper">
        <div class="catalog-meta">
          <div class="button catalog-meta__primary button--primary-small">
            <svg class="svg catalog-meta__icon-primary" aria-label="{{ catalogViewmodes.gridView.alt }}">
              <use href="{{ catalogViewmodes.gridView.icon }}"></use>
            </svg>
          </div>
          <div class="button catalog-meta__secondary button--secondary-small">
            <svg class="svg catalog-meta__icon" aria-label="{{ catalogViewmodes.listView.alt }}">
              <use href="{{ catalogViewmodes.listView.icon }}"></use>
            </svg>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="catalog-tags">
    {% for tag in catalogTags %}
      <div class="button catalog-tag__item button--secondary">
        {{ tag.label }}
        <svg class="catalog-tag__icon" aria-hidden="true" focusable="false">
          <use href="{{ tag.icon }}"></use>
        </svg>
      </div>
    {% endfor %}
  </div>
</section>