<article class="blog-card">
  <a class="blog-card__link" href="{{ card.link }}">
    <picture class="blog-card__img{% if loop.first %} blog-card__img--primary{% endif %}">
      <source srcset="/img/{{ card.img }}-1x.avif 1x, /img/{{ card.img }}-2x.avif 2x" type="image/avif"/>
      <source srcset="/img/{{ card.img }}-1x.webp 1x, /img/{{ card.img }}-2x.webp 2x" type="image/webp"/>
      <img class="blog-card__img" src="/img/{{ card.img }}-2x.webp" alt="{{ card.alt }}" width="{{ card.width }}" height="{{ card.height }}" loading="lazy"/>
    </picture>
    <h3 class="blog-card__title">{{ card.title }}</h3>
    <time class="blog-card__date" datetime="2024-04-15">{{ card.date }}</time>
  </a>
</article>