<footer class="footer">
  <div class="container footer__content">
  
    <!-- Upper section -->
    <div class="footer__upper">
      <div class="footer__brand">
        <a href="{{ header.logoLink }}">
        <svg class="footer__logo">
          <use href="{{ header.logoImgFull }}" aria-label="{{ header.logoAlt }}"></use>
        </svg>
        </a>
        <p class="footer__description">{{ footerDescription }}</p>
      </div>

      <div class="footer__nav-wrapper">
        {% for group in footerNav %}
          <nav class="footer__nav">
            <h3 class="footer__nav-title">{{ group.title }}</h3>
            <ul class="footer__nav-list">
              {% for item in group.links %}
                <li class="footer__nav-item">
                  <a class="footer__nav-link" href="{{ item.link }}">{{ item.text }}</a>
                </li>
              {% endfor %}
            </ul>
          </nav>
        {% endfor %}
      </div>
    </div>

    <!-- Middle section -->
    <div class="footer__middle">
      <div class="footer__socials">
        <ul class="footer__social-list">
          {% for social in footerSocials %}
            <li class="button footer__social-item button--secondary">
              <a href="{{ social.link }}" target="_blank">
                <svg class="svg footer__social-icon">
                  <use href="{{ social.icon }}" aria-label="{{ social.alt }}"></use>
                </svg>
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>

      <div class="footer__newsletter">
        <h4 class="footer__newsletter-title">
          {{ footerNewsletter.title }}
        </h4>
        <form class="footer__form" method="get">
          <input class="footer__input" type="search" placeholder="{{ footerNewsletter.placeholder }}">
          <button class="button footer__submit button--primary">
            {{ footerNewsletter.button }}
          </button>
        </form>
      </div>
    </div>

  </div> 

  <!-- Lower section (outside .footer__content) -->
  <div class="footer__lower">
    <ul class="footer__legal-list">
      {% for item in footerLegal %}
        <li class="footer__legal-item">{{ item }}</li>
      {% endfor %}
    </ul>
    <p class="footer__copyright">{{ footerCopyright }}</p>
  </div>
</footer>
